<?php
namespace Hyperframework;

final class Config {
    private static $data = array();
    private static $isHidefEnabled;
    private static $hidefPrefix;

    public static function enableHidefDataSource($prefix) {
        self::$isHidefEnabled = true;
        self::$hidefPrefix = $prefix;
    }

    public static function get($name) {
        if (self::$isHidefEnabled === true && defined(self::$hidefPrefix . $config)) {
        }
        if (isset(self::$data[$name])) {
            return self::$data[$name];
        }
    }

    public static function set($key, $value) {
        self::$data[$key] = $value;
    }

    public static function has($name) {
        return isset(self::$data[$name]);
    }

    public static function remove($name) {
        unset(self::$data[$name]);
    }

    public static function import($configs) {
        foreach ($configs as $key => $value) {
            self::$data[$key] = $value;
        }
    }

    public static function export() {
        return self::$data;
    }

    public static function reset() {
        self::$data = array();
    }
}
